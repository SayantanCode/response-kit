  "keywords": [
    "express",
    "api",
    "response",
    "pagination",
    "response-handler",
    "http",
    "typescript",
    "nodejs",
    "res.json",
    "backend"
  ],
  "author": "Sayantan Chakraborty",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.4",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  }
}
